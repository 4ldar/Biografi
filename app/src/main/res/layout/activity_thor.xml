<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B192C"
    tools:context=".ThorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

            <TextView
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&#60;"
                android:textSize="30sp"
                android:textColor="#FF6500"
                android:layout_marginEnd="8dp"
                android:padding="4dp"
                android:clickable="true"
                android:focusable="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:background="#1A2B3C"
        android:padding="16dp"
        android:elevation="4dp"
        android:clipToOutline="true"
        android:outlineProvider="background">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/hemsworth"
            android:scaleType="centerCrop"
            android:layout_marginRight="16dp"
            android:background="@drawable/shape"
            android:clipToOutline="true" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chris Hemsworth"
                android:textColor="#ECDFCC"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thor"
                android:textColor="#ECDFCC"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1A2B3C"
            android:padding="16dp"
            android:elevation="4dp"
            android:clipToOutline="true"
            android:outlineProvider="background">

            <TextView
                android:id="@+id/tvBiography1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chris Hemsworth adalah seorang aktor asal Australia yang lahir pada 11 Agustus 1983 di Melbourne. Ia dikenal luas karena perannya sebagai Thor dalam Marvel Cinematic Universe (MCU), yang dimulai dengan film Thor (2011) dan berlanjut dalam beberapa film MCU lainnya, termasuk The Avengers dan Thor: Ragnarok. Sebelum terkenal di Hollywood, Hemsworth memulai karier aktingnya di Australia dengan peran dalam serial televisi seperti Home and Away. Ia kemudian pindah ke Amerika Serikat untuk mengejar karier film, dan sejak itu membintangi berbagai film, termasuk Snow White and the Huntsman, Rush, Extraction, dan Men in Black: International. Di luar karier akting, Hemsworth dikenal sebagai penggemar olahraga dan kebugaran. Ia menikah dengan aktris Spanyol, Elsa Pataky, pada 2010, dan mereka memiliki tiga anak. Chris juga sering terlibat dalam kegiatan filantropi dan mendukung berbagai kampanye lingkungan."
                android:textColor="#ECDFCC"
                android:gravity="center"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:background="#1A2B3C"
            android:padding="16dp"
            android:elevation="4dp"
            android:clipToOutline="true"
            android:outlineProvider="background">

            <Button
                android:id="@+id/btnInstagram"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Instagram"
                android:backgroundTint="#FF6500"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnTwitter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Twitter"
                android:backgroundTint="#FF6500"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>