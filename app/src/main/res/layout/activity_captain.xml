<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B192C"
    tools:context=".CaptainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&#60;"
            android:textSize="30sp"
            android:textColor="#FF6500"
            android:layout_marginEnd="8dp"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:background="#1A2B3C"
            android:padding="16dp"
            android:elevation="4dp"
            android:clipToOutline="true"
            android:outlineProvider="background">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/evans"
                android:scaleType="centerCrop"
                android:layout_marginRight="16dp"
                android:background="@drawable/shape"
                android:clipToOutline="true" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chris Evans"
                    android:textColor="#ECDFCC"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Captain America/Steve Rogers"
                    android:textColor="#ECDFCC"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1A2B3C"
            android:padding="16dp"
            android:elevation="4dp"
            android:clipToOutline="true"
            android:outlineProvider="background">

            <TextView
                android:id="@+id/tvBiography1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chris Evans adalah seorang aktor Amerika yang lahir pada 13 Juni 1981 di Boston, Massachusetts, dan dibesarkan di kota Sudbury. Ia dikenal secara global berkat perannya sebagai Captain America dalam Marvel Cinematic Universe (MCU), yang dimulai dari film Captain America: The First Avenger (2011) hingga Avengers: Endgame (2019). Evans memulai karier aktingnya di awal 2000-an, dengan peran kecil di serial TV Opposite Sex dan film-film seperti Not Another Teen Movie (2001). Ia juga tampil sebagai Human Torch dalam film Fantastic Four (2005) dan sekuelnya, sebelum mencapai kesuksesan besar dengan perannya sebagai Steve Rogers/Captain America. Selain dari MCU, Evans dikenal dalam proyek-proyek lain seperti Snowpiercer (2013), Knives Out (2019), dan Gifted (2017). Ia juga menjajal peran di belakang layar sebagai sutradara dalam film Before We Go (2014). Evans adalah seorang pecinta seni, sering mendukung isu-isu sosial, dan dikenal sebagai pribadi yang rendah hati. Pada 2022, ia dinobatkan sebagai Sexiest Man Alive oleh majalah People. Di luar dunia hiburan, ia dikenal sebagai penggemar olahraga dan sering menghabiskan waktu bersama keluarga dan teman-temannya."
                android:textColor="#ECDFCC"
                android:gravity="center"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:background="#1A2B3C"
            android:padding="16dp"
            android:elevation="4dp"
            android:clipToOutline="true"
            android:outlineProvider="background">

            <Button
                android:id="@+id/btnInstagram"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Instagram"
                android:backgroundTint="#FF6500"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnTwitter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Twitter"
                android:backgroundTint="#FF6500"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>